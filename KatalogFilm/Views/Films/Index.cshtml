@model IEnumerable<KatalogFilm.Models.Film>

@{
    ViewBag.Title = "Index";
}

<h2>List Film</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nama Film
        </th>
        <th>
            Tahun Rilis
        </th>
        <th>
            Genre
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NamaFilm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TahunRilis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre.NamaGenre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdFilm }) |
            @Html.ActionLink("Details", "Details", new { id=item.IdFilm }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdFilm })
        </td>
    </tr>
}

</table>